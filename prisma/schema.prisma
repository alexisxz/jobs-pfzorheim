// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Company {
  id             Int     @id @default(autoincrement())
  name           String  @unique
  image          String
  partner        Boolean
  primaryColor   String
  secondaryColor String
  Job            Job[]
}

model Task {
  id    Int     @id @default(autoincrement())
  name  String
  Job   Job?    @relation(fields: [jobId], references: [id])
  jobId String?
}

model Benefit {
  id    Int     @id @default(autoincrement())
  name  String
  Job   Job?    @relation(fields: [jobId], references: [id])
  jobId String?
}

model AppliedEmail {
  id    Int     @id @default(autoincrement())
  name  String
  Job   Job?    @relation(fields: [jobId], references: [id])
  jobId String?
}

model Job {
  id               String         @id @default(cuid())
  title            String
  shortDescription String?
  company          Company        @relation(fields: [companyId], references: [id])
  companyId        Int
  status           Boolean
  location         String
  field            String
  role             String
  postedDate       DateTime
  startingDate     DateTime?
  workingTime      String
  tasks            Task[]
  benefits         Benefit[]
  emailsApplied    AppliedEmail[]
}
